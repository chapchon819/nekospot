<div class="bg-white shadow-sm flex mx-auto w-full border rounded-xl md:mb-50 hover:shadow-lg group my-3">
    <div class="flex-shrink-0 rounded-l-xl relative overflow-hidden h-32 w-1/3 md:rounded-se-none">
        <img src="https://maps.googleapis.com/maps/api/place/photo?maxheight=1000&maxwidth=1000&photo_reference=<%= spot.spot_images.first.image %>&key=<%= ENV['GMAP_API_KEY'] %>" class="w-full h-full absolute rounded-l-xl top-0 left-0 object-cover transition-transform duration-200 ease-in-out group-hover:scale-110 group-hover:rounded-xl" alt="Image Description">
    </div>
    <div class="flex flex-wrap w-full">
        <div class="p-4 flex flex-col h-full sm:p-7 w-full">
            <h2 class="font-bold text-neutral font-zenmaru overflow-hidden w-full whitespace-nowrap text-overflow-ellipsis"><%= spot.name %></h2>
            <div class="justify-between flex md:space-x-4 space-x-2 mt-2">
                <div class="flex space-x-2">
                    <div class="inline-flex">
                        <p class="text-xs text-white py-1 px-2 rounded-full bg-accent dark:text-neutral-500"><%= spot.category.name %></p>
                    </div>
                    <p class="text-secondary">⭐️ <%= spot.rating %></p>
                </div>
                <div class="flex space-x-2">
                    <%= link_to '#', class: "text-secondary" do %><i class="ph-light ph-export fa-lg"></i><% end %>
                    <%= render 'bookmark_buttons', { spot: spot } %>
                </div>
            </div>
        </div>
    </div>
</div>