<div class="bg-white border rounded-xl shadow-sm flex mx-auto w-11/12 md:w-full absolute md:relative bottom-0 inset-x-0 z-10 md:mb-50 hover:shadow-lg group">
  <div class="flex-shrink-0 relative overflow-hidden h-33 w-32 md:w-1/3 md:rounded-se-none">
  <img src="https://maps.googleapis.com/maps/api/place/photo?maxheight=1000&maxwidth=1000&photo_reference=<%= spot.spot_images.first.image %>&key=<%= ENV['GMAP_API_KEY'] %>" class="w-full h-full absolute top-0 rounded-l-xl left-0 object-cover transition-transform duration-200 ease-in-out group-hover:scale-110 group-hover:rounded-l-xl" alt="Image Description">
  </div>
  <div class="flex flex-wrap">
    <div class="p-4 flex flex-col h-full sm:p-7">
      <h3 class="text-lg font-bold text-neutral font-zenmaru overflow-hidden whitespace-nowrap text-overflow-ellipsis"><%= spot.name %></h3>
      <div class="justify-between flex md:space-x-4 space-x-2 mt-2">
      <div class="flex">
        <div class="inline-flex">
          <p class="text-xs text-white py-1 px-2 rounded-full bg-accent dark:text-neutral-500"><%= spot.category.name %></p>
        </div>
        <p class="text-secondary"><%= spot.rating %></p>
        </div>
        <div class="flex space-x-2">
        <%= link_to '#', class: "text-secondary" do %><i class="ph-light ph-export fa-lg"></i><% end %>
        <%= render 'bookmark_buttons', { spot: spot } %>
      </div>
      </div>
    </div>
  </div>
</div>